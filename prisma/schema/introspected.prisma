model Admin {
  id        String   @id @unique @map("_id")
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model Contact {
  id String @id @unique @default(auto()) @map("_id")
  firstName String
  lastName  String?
  email     String
  phone     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model Volunteer {
  id        String   @id @unique @map("_id")
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime
}
